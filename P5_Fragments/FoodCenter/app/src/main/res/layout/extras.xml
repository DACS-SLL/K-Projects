<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.FoodCenter.Body1"
            android:text="@string/selecciona_extras"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_marginBottom="24dp"/>

        <CheckBox
            android:id="@+id/checkBebida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bebida"
            android:layout_marginBottom="16dp"/>

        <CheckBox
            android:id="@+id/checkPapas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/papas"
            android:layout_marginBottom="16dp"/>

        <CheckBox
            android:id="@+id/checkPostre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/postre"
            android:layout_marginBottom="32dp"/>

        <Button
            android:id="@+id/btnSiguienteExtras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/siguiente"
            style="@style/Widget.FoodCenter.Button"/>
    </LinearLayout>
</ScrollView>